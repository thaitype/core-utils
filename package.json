{
  "name": "@thaitype/core-utils",
  "type": "module",
  "version": "0.0.0",
  "main": "./dist/cjs/index.js",
  "module": "./dist/esm/index.js",
  "types": "./dist/dts/index.d.ts",
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "types": "./dist/dts/index.d.ts",
      "import": "./dist/esm/index.js",
      "default": "./dist/cjs/index.js"
    },
    "./calculator": {
      "types": "./dist/dts/calculator.d.ts",
      "import": "./dist/esm/calculator.js",
      "default": "./dist/cjs/calculator.js"
    }
  },
  "files": [
    "dist",
    "README.md",
    "src",
    "package.json"
  ],
  "scripts": {
    "all": "run-s check test build",
    "check": "tsc -b tsconfig.json",
    "test": "vitest run",
    "check:watch": "tsc -b tsconfig.json -w",
    "format": "prettier --write src",
    "release": "npm run build && changeset publish",
    "build": " run-s format && run-s  build-esm && run-s build-cjs && run-s build-annotate",
    "build-esm": "tsc -b tsconfig.build.json",
    "build-cjs": "babel dist/esm --plugins @babel/transform-export-namespace-from --plugins @babel/transform-modules-commonjs --out-dir dist/cjs --source-maps",
    "build-annotate": "babel dist --plugins annotate-pure-calls --out-dir dist --source-maps",
    "upgrade-deps": "npx taze -r --interactive",
    "check-deps": "npx taze -r"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.4",
    "@babel/cli": "^7.27.2",
    "@babel/core": "^7.27.1",
    "@babel/plugin-transform-export-namespace-from": "^7.27.1",
    "@babel/plugin-transform-modules-commonjs": "^7.27.1",
    "@type-challenges/utils": "^0.1.1",
    "babel-plugin-annotate-pure-calls": "^0.5.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.5.3",
    "vitest": "^3.1.4"
  },
  "peerDependencies": {
    "typescript": "^5.7.2"
  },
  "publishConfig": {
    "access": "public",
    "directory": "dist"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/thaitype/core-utils.git"
  },
  "homepage": "https://github.com/thaitype/core-utils",
  "prettier": {
    "trailingComma": "es5",
    "tabWidth": 2,
    "useTabs": false,
    "semi": true,
    "singleQuote": true,
    "printWidth": 120,
    "arrowParens": "avoid"
  }
}